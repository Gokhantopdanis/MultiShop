@model UpdateProductDetailDto

<div class="tab-pane fade show active" id="tab-pane-1">
    <h4 class="mb-3">Ürün Detayı</h4>
    @if (Model != null && !string.IsNullOrEmpty(Model.ProductDescription))
    {
        <p>@Model.ProductDescription</p>
    }
    else
    {
        <p>Ürün açıklaması mevcut değil.</p>
    }
</div>